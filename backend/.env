# Database configuration
DATABASE_URL=sqlite:///./network_monitor.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./network_monitor.db

# API configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Security
# IMPORTANT: Change this to a secure random string in production
SECRET_KEY=replace_with_your_secure_secret_key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Network monitoring
INTERFACE=
PACKET_CAPTURE_ENABLED=true
MOCK_DATA_FALLBACK=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=backend.log

# Performance
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# Features
ENABLE_AUTHENTICATION=true
ENABLE_WEBSOCKETS=true
ENABLE_ML=true
